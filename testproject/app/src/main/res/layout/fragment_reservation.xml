<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ReservationFragment"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp">

    <TextView
        android:id="@+id/res_layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Reservation"
        android:textSize="21sp"
        android:textColor="@color/theme">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/img_res"
        android:layout_alignBottom="@+id/res_layout_name"
        android:layout_marginBottom="-200dp"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/res2"></ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/res_first_name"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_res"
        android:layout_marginBottom="-60dp"
        android:background="@drawable/duongvien_goctron"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="First name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/lightCoffee"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/res_last_name"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_res"
        android:layout_marginBottom="-60dp"
        android:layout_marginLeft="188dp"
        android:background="@drawable/duongvien_goctron"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Last name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/lightCoffee"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/res_phone_number"
        android:layout_alignBottom="@+id/res_last_name"
        android:layout_marginBottom="-55dp"
        android:background="@drawable/duongvien_goctron"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Phone Number"
        android:inputType="number"
        android:maxLines="10"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/lightCoffee"
        android:textSize="16sp" >
    </TextView>

    <TextView
        android:id="@+id/res_date"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/res_phone_number"
        android:layout_marginBottom="-55dp"
        android:background="@drawable/duongvien_goctron"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="01/06/2021"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/lightCoffee"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/res_time"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/res_phone_number"
        android:layout_marginBottom="-55dp"
        android:layout_marginLeft="188dp"
        android:background="@drawable/duongvien_goctron"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="19:00"
        android:inputType="time"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/lightCoffee"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtNumberOfPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/res_time"
        android:layout_marginBottom="-55dp"
        android:background="@drawable/duongvien_goctron"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:hint="Number of People"
        android:textColorHint="@color/lightCoffee"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtNumberOfPeople"
        android:layout_marginBottom="-55dp"
        android:background="@drawable/duongvien_goctron"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:hint="Message"
        android:textColorHint="@color/lightCoffee"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnReservation"
        android:layout_alignBottom="@+id/edtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-68dp"
        android:background="@drawable/loginbutton_selector"
        android:padding="3dp"
        android:text="make a reservation"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>