<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    tools:context=".Activity.CheckoutActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Check out"
        android:textSize="21sp"
        android:textColor="@color/theme">
    </TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-55dp"
        android:layout_alignBottom="@+id/text1"
        android:layout_marginTop="27dp"
        android:text="Your address"
        android:textSize="16sp"
        android:textColor="@color/grey">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text2"
        android:layout_marginBottom="-49dp"
        android:hint="Type something..."/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-90dp"
        android:layout_alignBottom="@+id/text2"
        android:layout_marginTop="27dp"
        android:text="Your order"
        android:textSize="16sp"
        android:textColor="@color/grey">
    </TextView>

    <ListView
        android:id="@+id/lv_checkout"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignTop="@+id/text3"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text3"
        android:layout_marginBottom="-115dp"
        android:text="Sum"
        android:textColor="@color/black"
        android:textSize="18sp">
    </TextView>
    <TextView
        android:id="@+id/tv_checkout_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text3"
        android:layout_marginBottom="-115dp"
        android:gravity="right"
        android:text="50.000đ"
        android:textColor="@color/black"
        android:textSize="18sp">
    </TextView>
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text4"
        android:layout_marginBottom="-30dp"
        android:text="Shipping"
        android:textColor="@color/black"
        android:textSize="18sp">
    </TextView>
    <TextView
        android:id="@+id/tv_checkout_ship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text4"
        android:layout_marginBottom="-30dp"
        android:gravity="right"
        android:text="10.000đ"
        android:textColor="@color/black"
        android:textSize="18sp">
    </TextView>

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text5"
        android:layout_marginBottom="-60dp"
        android:text="Total"
        android:textColor="@color/black"
        android:textSize="18sp">
    </TextView>
    <TextView
        android:id="@+id/tv_checkout_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text5"
        android:layout_marginBottom="-60dp"
        android:gravity="right"
        android:text="50.000đ"
        android:textColor="@color/black"
        android:textSize="18sp">
    </TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-540dp">
    </Button>

</RelativeLayout>